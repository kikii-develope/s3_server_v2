# AWS 설정
AWS_IAM_USER_KEY="your-access-key"
AWS_IAM_USER_SECRET="your-secret-key"
AWS_REGION="ap-northeast-2"

# WebDAV 설정
WEBDAV_USER=your-webdav-user
WEBDAV_PASSWORD=your-webdav-password
WEBDAV_URL=http://your-webdav-server:8800
WEBDAV_ROOT_PATH=kikii_test  # 개발/온프레미스: kikii_test, 운영: www

# 서버 설정
PORT=8000  # 개발: 8000, 온프레미스: 8989, 운영: 80
NODE_ENV=development  # development, onprem, production

# CORS 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:3003  # 쉼표로 구분된 허용 도메인 목록
CORS_CREDENTIALS=true  # 인증 정보(쿠키) 포함 허용 여부

# Database 설정
DB_HOST=your-db-host
DB_PORT=3306
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=your-db-name

# 환경별 파일:
# - .env.development (로컬 개발)
# - .env.onprem (온프레미스)
# - .env.production (운영)
